@model WebApplication_FitToFast.Models.Inventory

@{
    ViewBag.Title = "Delete";
}
<body class="bg-stockManagr">
   
    <div class="padding-content" style="margin-left:250px; margin-top:50px;">
        <br />
        <h2 class="login-font" style="text-align:center;">Delete The Product</h2>

        <h3 class="confirm-delete font-fammily" style="text-align:center;">Are you sure you want to delete this?</h3>
        <div>
            <hr />

            <div class="row font-fammily">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-xs-8 col-sm-6">
                            <dl class="dl-horizontal" style="color:#d5d5d5;">
                                <br />
                                <dt>
                                    @Html.DisplayNameFor(model => model.pName)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.pName)
                                </dd>
                                <br />
                                <dt>
                                    @Html.DisplayNameFor(model => model.pDetail)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.pDetail)
                                </dd>
                                <br />
                                <dt>
                                    @Html.DisplayNameFor(model => model.pPrice)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.pPrice)
                                </dd>
                                <br />
                                <dt>
                                    @Html.DisplayNameFor(model => model.XS)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.XS)
                                </dd>
                                <br />
                                <dt>
                                    @Html.DisplayNameFor(model => model.S)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.S)
                                </dd>
                                <br />
                                <dt>
                                    @Html.DisplayNameFor(model => model.M)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.M)
                                </dd>
                                <br />
                                <dt>
                                    @Html.DisplayNameFor(model => model.L)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.L)
                                </dd>
                                <br />
                                <dt>
                                    @Html.DisplayNameFor(model => model.XL)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.XL)
                                </dd>
                                <br />
                                <dt>
                                    @Html.DisplayNameFor(model => model.Date)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Date)
                                </dd>
                                <br />
                            </dl>
                            @using (Html.BeginForm())
                            {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color" style="margin-left:100px;">
                                <input type="submit" value="Confirm Delete Product" class="btn btn-default btn-circle-sm" style="width:150px;" /> |
                                @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default btn-circle-sm", @style="width:100px;"})
                            </div>
                            }
                        </div>

                        <div class="col-xs-1 col-sm-3">
                            <div class="form-group">
                                <div class="col-md-7">
                                    <div class="testimonials">
                                        <div class="stock-img-round">
                                            <img src="~/ProductImages/@Model.pImage" width="250" height="250" />

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-7">
                                    <div class="testimonials">
                                        <div class="stock-img-round">
                                            <img src="~/TextureImages/@Model.pTexture" width="250" height="250" />

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>


        </div>
        <br />
    </div>


</body>