@model WebApplication_FitToFast.Models.UserManageModels
@{
    ViewBag.Title = "Delete";
}
<body class="bg-Usermanage">
    <div class="padding-content" style="margin-left:400px; margin-right:400px; margin-top:100px;">
    <br />
    <h2 class="login-font" style="text-align:center">Delete User Account</h2>

    <h3 class="confirm-delete font-fammily" style="text-align:center;">Are you sure you want to delete this?</h3>
    <div >
        <hr />
        <dl class="dl-horizontal font-fammily" style="color:#d5d5d5; margin-left:120px;">
            <dt>
                @Html.DisplayName("Real name")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.User.fname)
            </dd>
            <dt>
                @Html.DisplayName("Last name")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.User.lname)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.User.UserName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.User.UserName)
            </dd>
            <dt>
                @Html.DisplayName("Role")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Roles.Name)
            </dd>
        </dl>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="margin-left:180px;">
                <input type="submit" value="Confirm Delete" class="btn btn-default btn-circle-sm" style="width:120px;" /> |
                @Html.ActionLink("Cancel", "Index", null, new { @class="btn btn-default btn-circle-sm"})
            </div>
        }
        <br />
    </div>
</div>
   

</body>
