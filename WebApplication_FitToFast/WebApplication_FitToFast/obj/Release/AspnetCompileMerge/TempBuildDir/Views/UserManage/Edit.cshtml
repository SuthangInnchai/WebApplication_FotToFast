@model WebApplication_FitToFast.Models.UserManageModels
@{
    ViewBag.Title = "Edit";
}
<body class="bg-Usermanage">




    <div class="form-horizontal font-fammily padding-content" style="margin-left:400px; margin-right:400px; margin-top:100px;">
        <br />
    <h2 class="login-font" style="text-align:center;">Edit User Account</h2>

    @using (Html.BeginForm())
    {
    @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.User.Id)

        <div class="font-fammily" style="color:#d5d5d5;">
            <div class="form-group">
                    @Html.Label("Real name", new { @class = "control-label col-md-5" })
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.User.fname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.User.fname)
                    @Html.ValidationMessageFor(model => model.User.fname)
                </div>
            </div>
            <div class="form-group">
                @Html.Label("Last name", new { @class = "control-label col-md-5" })
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.User.lname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.User.lname)
                    @Html.ValidationMessageFor(model => model.User.lname)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.User.UserName, new { @class = "control-label col-md-5" })
                <div class="col-md-6">
                    @Html.DisplayFor(model => model.User.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.HiddenFor(model => model.User.UserName)
                    @Html.ValidationMessageFor(model => model.User.UserName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.User.Roles, new { @class = "control-label col-md-5"})
                <div class="col-md-5" style="color:#808080;">
                    @using WebApplication_FitToFast.Helpers
                    @Html.DropDownListFor(model => model.Roles.Name, UserRolesHelper.GetTypeIdList(), new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.User.Roles)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-5 col-md-10">
                    <input type="submit" value="Done" class="btn btn-default btn-circle-sm" /> | @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default btn-circle-sm" })
                </div>
            </div>
            <br />
        </div>
    }      
    </div>



    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }


</body>




